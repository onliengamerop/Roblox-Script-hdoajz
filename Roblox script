local kavoUi = loadstring(game:HttpGet("https://pastebin.com/raw/vff1bQ9F"))()
local window = kavoUi.CreateLib("Spin A Wheel For Robux |Made By Chaptigamerfan99|", "BloodTheme")

-- Creating the AutoFarm tab and section
local Tab1 = window:NewTab("Spin AutoFarm")
local Tab1Section = Tab1:NewSection("Spin AutoFarm OPðŸ˜±")

-- Adding the teleport functionality to the AutoFarm tab
Tab1Section:NewButton("ðŸ‘‰Autofarm TpðŸ‘ˆ", "Autofarm Tp", function()
    spawn(function()
        while true do
            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = CFrame.new(-17.6446705, 7.01802397, 408.413544, -0.994668305, 0, 0.103126742, 0, 1.00000012, 0, -0.103126742, 0, -0.994668305)
            wait(3)
        end
    end)
end)

-- Creating the Spin tab and section
local Tab2 = window:NewTab("Auto Instant SpinðŸ˜±")
local Tab2Section = Tab2:NewSection("Spin Actions")

local spinLoopRunning = false
local spinLoop

local function startSpinLoop()
    spinLoopRunning = true
    spinLoop = spawn(function()
        while spinLoopRunning do
            local args = {
                [1] = "spin"
            }
            game:GetService("ReplicatedStorage").Events.Spin:FireServer(unpack(args))
            wait()
        end
    end)
end

local function stopSpinLoop()
    spinLoopRunning = false
    if spinLoop then
        spinLoop:Destroy()
    end
end

Tab2Section:NewButton("Toggle Spin Loop", "Toggle Automatic Spinning", function()
    if not spinLoopRunning then
        startSpinLoop()
    else
        stopSpinLoop()
    end
end)

-- Adding Anti-AFK functionality
Tab2Section:NewButton("Activate Anti-AFK", "Prevents being kicked for inactivity", function()
    spawn(function()
        local vu = game:GetService("VirtualUser")
        game:GetService("Players").LocalPlayer.Idled:connect(function()
            vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
            wait(1)
            vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
        end)
    end)
end)

-- Creating the Free Spin tab and section
local Tab3 = window:NewTab("Free SpinðŸ˜±")
local Tab3Section = Tab3:NewSection("Free Spin Actions")

local freeSpinLoopRunning = false
local freeSpinLoop

local function startFreeSpinLoop()
    freeSpinLoopRunning = true
    freeSpinLoop = spawn(function()
        while freeSpinLoopRunning do
            local args = {
                [1] = "free"
            }
            game:GetService("ReplicatedStorage").Events.Spin:FireServer(unpack(args))
            wait()
        end
    end)
end

local function stopFreeSpinLoop()
    freeSpinLoopRunning = false
    if freeSpinLoop then
        freeSpinLoop:Destroy()
    end
end

Tab3Section:NewButton("Toggle Free Spin Loop", "Toggle Automatic Free Spinning", function()
    if not freeSpinLoopRunning then
        startFreeSpinLoop()
    else
        stopFreeSpinLoop()
    end
end)
